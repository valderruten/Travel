@model IEnumerable<App_Library.Models.Libro>

@{
    ViewData["Title"] = "Index";
}

<h1>Book list</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sinopsis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NPaginas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Editoriales)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sinopsis)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NPaginas)
                </td>
                <td>
                    @if (item.Editoriales != null)
                    {
                        @Html.DisplayFor(modelItem => item.Editoriales.Nombre)
                    }
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Isbn">Edit</a> |
                    <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.Isbn">Details</a> |
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Isbn">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
